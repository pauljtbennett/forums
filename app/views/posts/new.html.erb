<h2>Reply to <%= @conversation.title %></h2>

<%= form_for @post, :url => forum_conversation_posts_path do |f| %>
  <% if @post.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @post.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>

<%= link_to "Back to conversation", forum_conversation_path(@conversation.forum, @conversation) %>